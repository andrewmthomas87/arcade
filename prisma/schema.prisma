// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector()]
}

model Word {
  id            Int     @id @default(autoincrement())
  word          String  @unique
  isAlpha       Boolean
  frequency     Int
  partsOfSpeech String
  concreteness  Float
}

model WordEmbedding {
  word      String                     @id
  embedding Unsupported("vector(300)")
}

model Player {
  id   Int    @id @default(autoincrement())
  name String

  lobbies Lobby[]
  games   Game[]
}

model Lobby {
  id   Int    @id @default(autoincrement())
  code String @unique

  players      Player[]
  games        Game[]   @relation(name: "lobby")
  activeGame   Game?    @relation(fields: [activeGameId], references: [id])
  activeGameId Int?     @unique
}

model Game {
  id   Int    @id @default(autoincrement())
  type String

  lobby   Lobby    @relation(name: "lobby", fields: [lobbyId], references: [id])
  lobbyId Int
  players Player[]

  activeLobby Lobby?
  codenames   CodenamesGame?
  verbose     VerboseGame?
}

// Codenames

model CodenamesWord {
  index Int    @id
  word  String @unique
}

model CodenamesGame {
  game   Game @relation(fields: [gameId], references: [id])
  gameId Int  @id

  boardSize String

  rounds CodenamesRound[]
}

model CodenamesRound {
  codenames CodenamesGame @relation(fields: [gameId], references: [gameId])
  gameId    Int
  number    Int

  initJSON  String
  stateJSON String

  @@id([gameId, number])
}

// Verbose

model VerboseWord {
  index Int    @id
  word  String @unique
}

model VerboseGame {
  game   Game @relation(fields: [gameId], references: [id])
  gameId Int  @id

  rounds VerboseRound[]
}

model VerboseRound {
  verbose VerboseGame @relation(fields: [gameId], references: [gameId])
  gameId  Int
  number  Int

  initJSON  String
  stateJSON String

  @@id([gameId, number])
}
